
@model IEnumerable<TravelApp_DotnetMVC.Models.Destination>
@{
    ViewBag.Title = "Destinations";
    Layout = "_Layout";
}

<h2>Destinations</h2>
<ul>
    @foreach (var destination in Model)
    {
        <div class="card" style="width: 18rem;">
            <img src="@(destination.Image != null 
                          ? $"data:image/jpeg;base64,{Convert.ToBase64String(destination.Image)}" 
                          : "/images/placeholder.png")" 
                 class="card-img-top" 
                 alt="@destination.Name" />
            <div class="card-body">
                <h5 class="card-title">@destination.Name</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the cardâ€™s content.</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    }
</ul>
